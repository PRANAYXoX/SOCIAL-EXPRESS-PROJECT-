<link rel="stylesheet" href="/css/signup.css" type="text/css"/>
<section id="signup">
    <div class="container card my-4 ">
        <div class="row bg-dark text-warning justify-content-center form-head">
            CODEIAL | SIGNUP
        </div>
        <form action="/user/create" method="post">
                <div class="row mt-2 username">
                    <div class="text-center">USERNAME:</div>
                    <input type="text" name="username" required/>
                </div>
                <div class="row mt-2 email">
                    <div class="text-center ">EMAIL:</div>
                    <input type="text" name="email" required/>
                </div>
                <div class="row mt-2 pass">
                    <div class="text-center ">PASSWORD:</div>
                    <input type="text" name="password" required/>
                </div>
                <div class="row mt-2 cpass">
                    <div class="text-center ">CONFIRM-PASSWORD:</div>
                    <input type="text" name="cpassword" required/>
                </div>
                <div class="row my-4 btn text-center">
                    <input type="submit" class="btn btn-warning" value="Register" />
                </div>
        </form>
    </div>
</section>